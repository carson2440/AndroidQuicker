<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="isLoading"
            type="boolean" />

        <variable
            name="homeViewModel"
            type="com.carson.androidquicker.vo.HomeMode" />

    </data>

    <com.carson.quicker.view.scroller.PullUpDownLayout
        android:id="@+id/pullload"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:padding="50dp"
                    android:text="MobileDroid1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name_debug" />


                <TextView
                    android:id="@+id/loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="network" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:padding="50dp"
                    android:text="MobileDroid2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="50dp"
                    android:text="MobileDroid3"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:padding="50dp"
                    android:text="MobileDroid4"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:padding="50dp"
                    android:text="MobileDroid5"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    android:gravity="center"
                    android:padding="50dp"
                    android:text="MobileDroid6"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="50dp"
                    android:text="MobileDroid7"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    android:gravity="center"
                    android:padding="50dp"
                    android:text="MobileDroid8"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:padding="50dp"
                    android:text="MobileDroid9"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="50dp"
                    android:text="MobileDroid10"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>

    </com.carson.quicker.view.scroller.PullUpDownLayout>

</layout>
